generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model user {
   id         String @id @default(uuid())
   login      String 
   password   String
   telefone   String
   name       String
   image      String
   melhoresTecnologias String
   nascimento String
   description String
   github       String
}

model PostList {
   id          String @id @default(uuid())
   tecnologias String
   host        String
   descricao   String
   imgHost     String
   // status      String
   // titulo      String
   // dataInicio  String
   // dataFim     String
   // Messages    Message[]
}

